{
  // LaTeX Resume Development Container
  // Based on qmcgaw/latexdevcontainer - the most popular LaTeX devcontainer image
  // Includes TeX Live 2025, latexmk, chktex, and LaTeX Workshop extension
  // Source: https://github.com/qdm12/latexdevcontainer

  "name": "LaTeX Resume",

  // Use the full TeX Live image (~4.2GB) for maximum package compatibility
  // Alternative: "qmcgaw/latexdevcontainer:latest" for minimal install (~467MB)
  "image": "qmcgaw/latexdevcontainer:latest-full",

  // Environment variables for proxy support (if needed)
  "containerEnv": {
    "http_proxy": "${localEnv:HTTP_PROXY}",
    "https_proxy": "${localEnv:HTTPS_PROXY}",
    "no_proxy": "${localEnv:NO_PROXY}"
  },

  // Install additional LaTeX packages after container creation (if using minimal image)
  // The full image already includes these packages, but this ensures they're up to date
  "postCreateCommand": "tlmgr update --self 2>/dev/null || true",

  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },

    "vscode": {
      "extensions": [
        // LaTeX
        "James-Yu.latex-workshop",

        // Code quality
        "streetsidesoftware.code-spell-checker",

        // GitHub integration
        "github.vscode-pull-request-github",
        "github.copilot",
        "github.vscode-github-actions"
      ],
      "settings": {
        // LaTeX Workshop settings
        "latex-workshop.latex.autoBuild.run": "onSave",
        "latex-workshop.latex.recipe.default": "latexmk (pdflatex)",
        "latex-workshop.latex.clean.fileTypes": [
          "*.aux",
          "*.bbl",
          "*.blg",
          "*.fdb_latexmk",
          "*.fls",
          "*.log",
          "*.out",
          "*.synctex.gz",
          "*.toc"
        ],
        "latex-workshop.view.pdf.viewer": "tab",

        // Editor settings
        "editor.tabSize": 2,
        "editor.formatOnSave": false,
        "editor.wordWrap": "on",
        "files.associations": {
          "*.tex": "latex"
        }
      }
    }
  }
}
